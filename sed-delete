#!/bin/bash

source "${UTILITY_FILE}"

Set() {
    if Bound "$1"; then
        Error "extra option '${arg}' is specified"
    fi
    declare -g "$1"="${parsed_}"
}
Get() {
    while ((0 < $#))
    do
        arg="$1"
        case "${arg}" in
            -a* | --address=* )
                Parse "$@" || shift $?
                Set address;;
            -f* | --file=* )
                Parse "$@" || shift $?
                Set find;;
            * )
                Error "unknown option '${arg}'";;
        esac
    done
}

declare -g parsed_ arg find address
Get "$@"
script="${address-}d"
if Bound file; then
    sed -i -e "${script}" "${file}"
else
    sed -e "${script}"
fi
